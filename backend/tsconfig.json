{
  "compilerOptions": {
    "target": "ES2022",                          // Node.js 22 supports ES2022
    "module": "commonjs",                        // Firebase Functions use CommonJS
    "lib": ["ES2022"],                          // Include ES2022 library features
    "outDir": "lib",                            // Output directory
    "rootDir": "src",                           // Source root directory
    "removeComments": true,                     // Remove comments from output
    "strict": true,                             // Enable all strict type checking
    "noImplicitReturns": true,                  // Error on functions without return
    "noUnusedLocals": true,                     // Error on unused local variables
    "noUnusedParameters": false,                // Allow unused parameters (Firebase context)
    "exactOptionalPropertyTypes": true,         // Strict optional property types
    "noImplicitOverride": true,                 // Require explicit override keyword
    "noPropertyAccessFromIndexSignature": true, // Require bracket notation for index access
    "noUncheckedIndexedAccess": true,           // Include undefined in index signature results
    "sourceMap": true,                          // Generate source maps
    "declaration": false,                       // Don't generate .d.ts files
    "esModuleInterop": true,                    // Enable ES module interop
    "allowSyntheticDefaultImports": true,       // Allow default imports from modules
    "forceConsistentCasingInFileNames": true,   // Ensure consistent file name casing
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "resolveJsonModule": true                   // Allow importing JSON modules
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
